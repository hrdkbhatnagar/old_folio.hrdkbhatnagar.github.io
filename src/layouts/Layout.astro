---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Hardik Bhatnagar - Researcher at the intersection of neuroscience and computer science" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>{title}</title>
    <link rel="stylesheet" href="/styles/global.css" />
    <script is:inline>
      // Theme initialization - runs before page renders to prevent flash
      // Default to light mode unless user has explicitly chosen dark
      (function() {
        const theme = localStorage.getItem('theme') || 'light';
        document.documentElement.setAttribute('data-theme', theme);
      })();
    </script>
  </head>
  <body>
    <div class="container">
      <slot />
    </div>
  </body>
</html>
